-- Initial ReWire.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

-- The name of the package.
name              : ReWire

-- The package version.  See the Haskell package versioning policy (PVP)
-- for standards guiding when and how versions should be incremented.
-- http://www.haskell.org/haskellwiki/Package_versioning_policy
-- PVP summary:     +-+------- breaking API changes
--                  | | +----- non-breaking API additions
--                  | | | +--- code changes with no API change
version           : 2.0.0.1

-- A short (one-line) description of the package.
synopsis          : A Haskell-to-VHDL compiler

-- A longer description of the package.
description       : An experimental compiler for a subset of Haskell to VHDL.

-- URL for the project homepage or repository.
homepage          : https://github.com/mu-chaco/ReWire

-- The license under which the package is released.
license           : AllRightsReserved

-- The file containing the license text.
license-file      : LICENSE

-- The package author(s).
author            : Adam Procter, Chris Hathhorn, Ian Graves, and William L. Harrison

-- An email address to which users can send suggestions, bug reports, and
-- patches.
maintainer        : hathhorn@gmail.com

-- A copyright notice.
-- copyright:

category          : Language

build-type        : Simple

-- Extra files to be distributed with the package, such as examples or a
-- README.
extra-source-files: README.md
data-files        : tests/integration/*.hs
                    tests/integration/OD19/*.hs
                    tests/regression/Mods/*.hs
                    tests/regression/Mods/C/*.hs
                    tests/regression/*.hs
                    src/lib/*.hs
                    src/lib/ReWire/*.hs

-- Constraint on the version of Cabal needed to build this package.
cabal-version     :  >=1.10

library
  hs-source-dirs  : src
                  , src/lib
  build-depends   : ghc >=7.10
                  , base >=4.8 && < 5
                  , bytestring >= 0.10
                  , containers >= 0.5
                  , unordered-containers >= 0.2
                  , deepseq >= 1.3.0
                  , directory >= 1.2 && < 1.4
                  , exceptions >= 0.8 && < 0.11
                  , filepath >= 1.3 && < 1.5
                  , hashable >= 1.3 && < 1.4
                  , haskell-src-exts >= 1.23 && < 1.24
                  , mtl >= 2.2.1
                  , prettyprinter >= 1.7 && < 1.8
                  , split >= 0.2 && < 0.3
                  , text >= 0.11
                  , transformers >= 0.3
                  , text-show >= 3.9 && < 3.10
                  , unbound-generics >= 0.4.1 && < 0.4.2
                  , monad-resumption >= 0.1.4.0
                  , parsec >= 3.1.14 && < 3.1.15
  default-language: Haskell2010
  ghc-options     : -Wall
                    -fno-warn-name-shadowing
                    -funbox-strict-fields
                    -O2
                    -optc-O3
                    -j8 +RTS -A64m -RTS

  other-modules   : Paths_ReWire
                    ReWire.Annotation
                    ReWire.Core.Mangle
                    ReWire.Core.Syntax
                    ReWire.Core.ToVHDL
                    ReWire.Core.ToVerilog
                    ReWire.Core.Transform
                    ReWire.Crust.Annotate
                    ReWire.Crust.Cache
                    ReWire.Crust.Desugar
                    ReWire.Crust.Fixity
                    ReWire.Crust.KindCheck
                    ReWire.Crust.Parse
                    ReWire.Crust.PrimBasis
                    ReWire.Crust.Purify
                    ReWire.Crust.Rename
                    ReWire.Crust.Syntax
                    ReWire.Crust.ToCore
                    ReWire.Crust.ToCrust
                    ReWire.Crust.Transform
                    ReWire.Crust.TypeCheck
                    ReWire.Crust.TypeVerify
                    ReWire.Error
                    ReWire.Flags
                    ReWire.VHDL.Syntax
                    ReWire.VHDL.ToLoFIRRTL
                    ReWire.Verilog.Syntax
                    ReWire.LoFIRRTL.Syntax
                    ReWire.FIRRTL.Syntax
                    ReWire.FIRRTL.ToLoFIRRTL
                    ReWire.Pretty
                    ReWire.SYB
                    ReWire.Unbound
                    ReWire.Prelude
                    ReWire.HaskellSyntaxOrphans

  exposed-modules : ReWire.FrontEnd
                    ReWire.Main
                    ReWire
                    ReWire.Bits
                    ReWire.FIRRTL.Parse
  default-extensions : LambdaCase
                       TupleSections
                       ViewPatterns

executable rwc
  hs-source-dirs  : src/rwc
  main-is         : Main.hs
  build-depends   : ReWire, base >= 4.8 && < 5
  default-language: Haskell2010
  ghc-options     : -Wall
                    -O2
                    -optc-O3
                    -funbox-strict-fields
                    -j8 +RTS -A64m -RTS
  default-extensions : LambdaCase
                       TupleSections
                       ViewPatterns

executable firrtl
  hs-source-dirs  : src/firrtl
  main-is         : Main.hs
  build-depends   : ReWire
                  , base >= 4.8 && < 5
                  , text-show >= 3.9 && < 3.10
                  , text >= 0.11
  default-language: Haskell2010
  ghc-options     : -Wall
                    -O2
                    -optc-O3
                    -funbox-strict-fields
                    -j8 +RTS -A64m -RTS
  default-extensions : LambdaCase
                       TupleSections
                       ViewPatterns

test-suite rwc-test
  hs-source-dirs  : src/rwc-test
  type            : exitcode-stdio-1.0
  main-is         : Main.hs
  build-depends   : Cabal >= 1.10
                  , HUnit >= 1.2.5 && < 1.7
                  , base >= 4.6 && < 5
                  , directory >= 1.2 && < 1.4
                  , process >= 1.5 && < 1.7
                  , filepath >= 1.3 && < 1.5
                  , test-framework >= 0.8 && < 0.9
                  , test-framework-hunit >= 0.3.0.2 && < 0.4
                  , ReWire
  other-modules   : Paths_ReWire
  default-language: Haskell2010
  ghc-options     : -Wall
                    -O2
                    -optc-O3
                    -funbox-strict-fields
                    -j8 +RTS -A64m -RTS
  default-extensions : LambdaCase
                       TupleSections
                       ViewPatterns

source-repository head
  type            : git
  location        : git://github.com/mu-chaco/ReWire.git
